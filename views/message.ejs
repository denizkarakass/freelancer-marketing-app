<%- include('partials/_header'); %>

  <% if(user) { %>

    <br><br>
    <div class="container">

    </div>

    <div class="content " id="chat-wrap">
      <div class="container-fluid">

        <div class="row">

          <div class="col-xl-2 col-md-4 ">
            <div class="settings-widget">
              <div class="settings-header d-sm-flex flex-row flex-wrap text-center text-sm-start align-items-center">
                <a href="users/dashboard"><img alt="profile image" src="/assets/img/img-04.jpg"
                    class="avatar-lg rounded-circle"></a>
                <div class="ms-sm-3 ms-md-0 ms-lg-3 mt-2 mt-sm-0 mt-md-2 mt-lg-0">
                  <p class="mb-2">Hosşgeldin,</p>
                  <h3 class="mb-0"><a href="users/dashboard">
                      <%= user.name %>
                    </a></h3>
                </div>
              </div>
              <div class="settings-menu">
                <ul>
                  <li class="nav-item">
                    <a href="users/dashboard" class="nav-link">
                      <i class="material-icons">verified_user</i> Yönetim Paneli
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="/freelancers" class="nav-link">
                      <i class="material-icons">business_center</i> Freelancer Bul
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="/message" class="nav-link active">
                      <i class="material-icons">chat</i> Mesajlaşma
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="freelancer-withdraw-money.html" class="nav-link">
                      <i class="material-icons">wifi_tethering</i> Ödeme
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="/users/logout" class="nav-link">
                      <i class="material-icons">power_settings_new</i> Çıkış Yap
                    </a>
                  </li>
                </ul>
                <!--Proje Ekle-->
                <div class="pro-head"><a href="/addProje" class="btn fund-btn skill-add">
                    Yeni Proje Ekle
                  </a>
                </div>

                <div class="pro-head"><a href="/addFree" class="btn fund-btn skill-add">
                    Freelance Çalışma İlanı Oluştur Ve Yayınla
                  </a>
                </div>

              </div>
            </div>
          </div>


          <div class="col-md-6 ">

            <div class="chat-window">

              <div class="chat-cont-left">
                <div class="chat-header">
                  <form class="chat-search">
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <i class="fas fa-search icon-circle"></i>
                      </div>
                      <input type="text" class="form-control rounded-pill" placeholder="Search">
                    </div>
                  </form>
                </div>


                <div class="chat-users-list">
                  <div class="chat-scroll">
                    <% for (let i=0; i< conversations.length; i++) { %>
                      <a href="/conversations/<%= conversations._id %>" class="media d-flex">
                        <div class="media-img-wrap flex-shrink-0">
                          <div class="avatar avatar-away">
                            <img src="assets/img/img-02.jpg" alt="User Image" class="avatar-img rounded-circle">
                          </div>
                        </div>
                        <div class="media-body flex-grow-1">
                          <div>
                            <div class="user-name">
                              <%= conversations._id %>
                            </div>
                          </div>
                          <div>
                          </div>
                        </div>
                      </a>
                      <% } %>
                  </div>
                </div>
              </div>


              <div class="chat-cont-right">
                <div class="chat-header">
                  <a id="back_user_list" href="javascript:void(0)" class="back-user-list">
                    <i class="material-icons">chevron_left</i>
                  </a>
                  <div class="media d-flex">
                    <div class="media-img-wrap flex-shrink-0">
                      <div class="avatar avatar-online">
                        <img src="assets/img/img-05.jpg" alt="User Image" class="avatar-img rounded-circle">
                      </div>
                    </div>
                    <div class="media-body flex-grow-1">
                      <div class="user-name">
                        <%= user.name %>
                      </div>
                      <div class="user-status">online</div>
                    </div>
                  </div>
                </div>

                <div class="chat-body">
                  <div class="chat-scroll">
                    <ul class="list-unstyled">

                      <% for (let i=0; i< messages.length; i++) { %>
                        <li class="media sent d-flex">
                          <div class="avatar flex-shrink-0">
                            <img src="assets/img/img-05.jpg" alt="User Image" class="avatar-img rounded-circle">
                          </div>
                          <div class="media-body flex-grow-1">
                            <div class="msg-box">
                              <div>
                                <p>
                                  <%= messages[i].text %>
                                </p>
                                <ul class="chat-msg-info">
                                  <li>
                                    <div class="chat-time">
                                      <span>10:02 AM</span>
                                    </div>
                                  </li>
                                </ul>
                              </div>
                            </div>
                          </div>
                        </li>
                        <% } %>

                    </ul>
                  </div>
                </div>

                <form id="form" action="/messages" method="POST">
                  <div class="chat-footer">
                    <div class="input-group">
                      <div class="avatar">
                        <img src="assets/img/img-05.jpg" alt="User Image" class="avatar-img rounded-circle">
                      </div>
                      <input name="text" type="text" class="input-msg-send form-control"
                        placeholder="Mesaj yaz...">
                      <div class="btn-file btn">
                        <div class="btn-file btn">
                          <i class="fa fa-paperclip"><small> Dosya gönder</small></i>
                          <input type="file">
                        </div>
                        <button type="submit" class="btn btn-primary msg-send-btn rounded-pill"><i
                            class="fab fa-telegram-plane"></i></button>
                </form>

              </div>



            </div>

          </div>


        </div>

      </div>

    </div>

    </div>

    </div>



    <%- include('partials/_footer') %>

      <% } %>